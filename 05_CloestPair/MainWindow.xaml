<Window x:Class="_05_CloestPair.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_05_CloestPair"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1060">
  <StackPanel>
    <Canvas x:Name="can" Background="AliceBlue" Margin="10"
            Width="1000" Height="600"/>
    
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
      <TextBlock Text="생성할 점의 개수 : " VerticalAlignment="Center"/>
      <TextBox x:Name="txtNo" Width="80" Height="25" HorizontalContentAlignment="Center"/>
      <Button x:Name="btnCreate" Content="생성" Width="150" Margin="50 10 50 10"
              Click="btnCreate_Click"/>
      <Button x:Name="btnBruteForce" Content="Brute Force" Width="150" Margin="0 10 50 10"
              Click="btnBruteForce_Click"/>
      <Button x:Name="btnDC" Content="Divede and Conquer" Width="150" Margin="0 10 50 10"
              Click="btnDC_Click"/>
    </StackPanel>
  </StackPanel>
</Window>
