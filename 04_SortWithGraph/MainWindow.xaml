<Window x:Class="_04_SortWithGraph.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04_SortWithGraph"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="650" Width="1100">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="139*"/>
      <ColumnDefinition Width="311*"/>
    </Grid.ColumnDefinitions>
    <TextBlock HorizontalAlignment="Left" Margin="45,49,0,0" 
               TextWrapping="Wrap" 
               Text="데이터 갯수" VerticalAlignment="Top"/>
    <TextBox x:Name="txtData"  
             Text="200"
             HorizontalAlignment="Left" 
             Margin="131,49,0,0" 
             TextWrapping="Wrap" 
             VerticalAlignment="Top" 
             Width="120"
             HorizontalContentAlignment="Center"/>
    <Button x:Name="btnRandom" 
            Content="랜덤 숫자 생성" 
            HorizontalAlignment="Left" 
            Margin="4,49,0,0" 
            VerticalAlignment="Top" 
            Width="120"
            Click="btnRandom_Click" Grid.Column="1"/>
    <TextBlock HorizontalAlignment="Left" Margin="45,129,0,0" TextWrapping="Wrap" 
               Text="알고리즘별 실행속도" 
               VerticalAlignment="Top"/>
    <TextBlock HorizontalAlignment="Left" 
               Margin="45,174,0,0" 
               TextWrapping="Wrap" 
               Text="수행과정 그래프 확인" VerticalAlignment="Top"/>
    <Button x:Name="btnTime" 
            Content="시간 측정" HorizontalAlignment="Left" Margin="4,127,0,0" VerticalAlignment="Top" Width="118" Grid.Column="1"
            Click="btnTime_Click"/>
    <TextBlock x:Name="txtBubbleTime"
               Margin="172,88,328,60" 
               Grid.Column="1" >버블정렬 시간 : </TextBlock>
    <TextBlock x:Name="txtQuickTime"
               Margin="172,128,420,60" 
               Grid.Column="1" >퀵 정렬 시간 :</TextBlock>

    <Button x:Name="btnBubble" 

            Content="버블 정렬" HorizontalAlignment="Left" 
            Margin="4,168,0,0" VerticalAlignment="Top" Width="118" Height="22" Grid.Column="1"
            Click="btnBubble_Click"/>
    <Button x:Name="btnQuick" 
        Content="퀵 정렬" HorizontalAlignment="Left" 
        Margin="172,168,0,0" VerticalAlignment="Top" Width="118" Height="22" Grid.Column="1"/>
    <Canvas x:Name="canvas" 
            Width="1000" 
            Height="300" 
            Background="AliceBlue"
            Margin="45,249,55,35" Grid.ColumnSpan="2"/>
  </Grid>
</Window>
